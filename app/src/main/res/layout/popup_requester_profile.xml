<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center">

    <ProgressBar
        android:id="@+id/progressPopUpRequesterProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="visible"
        android:elevation="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/imgVwPopUpRequesterProfileClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/contDesc"
        android:elevation="5dp"
        android:src="@drawable/close_icon"
        android:tint="@color/white"
        tools:srcCompat="@drawable/arrow_back_icon" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:background="@color/red"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:gravity="center">

                            <androidx.cardview.widget.CardView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_gravity="center"
                                app:cardCornerRadius="250dp">

                                <ImageView
                                    android:id="@+id/imgVwRequesterProfileImg"
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:contentDescription="@string/contDesc"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/teams_image_icon" />
                            </androidx.cardview.widget.CardView>
                        </TableRow>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="vertical">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtVwPopUpRequesterProfileNickname"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_semibold"
                                        android:text="@string/txtVwTeamMateProfileNickname"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="30sp" />

                                    <TextView
                                        android:id="@+id/txtVwPopUpRequesterProfileRegion"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_semibold"
                                        android:text="@string/txtVwTeamMateProfileRegion"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="30sp" />

                                    <TextView
                                        android:id="@+id/txtVwPopUpRequesterProfilePosition"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_semibold"
                                        android:text="@string/txtVwTeamMateProfilePosition"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="30sp" />

                                    <TextView
                                        android:id="@+id/txtVwPopUpRequesterProfileAge"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_semibold"
                                        android:text="@string/txtVwTeamMateProfileAge"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="30sp" />
                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    tools:ignore="UselessParent">

                                    <TextView
                                        android:id="@+id/txtVwPopUpRequesterProfileStatistics"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_semibold"
                                        android:text="@string/txtVwTeamMateProfileStatistics"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="30sp" />

                                    <TableLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TableRow
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:id="@+id/txtVwPopUpRequesterProfileMatchesPlayed"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/montserrat_semibold"
                                                android:text="@string/txtVwTeamMateProfileMatchesPlayed"
                                                android:textAlignment="textStart"
                                                android:textColor="@color/black"
                                                android:textSize="25sp" />

                                            <TextView
                                                android:id="@+id/txtVwPopUpRequesterProfilePlayedNumber"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="10dp"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/montserrat_semibold"
                                                android:text="@string/number"
                                                android:textAlignment="center"
                                                android:textColor="@color/black"
                                                android:textSize="25sp" />
                                        </TableRow>

                                        <TableRow
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:id="@+id/txtVwPopUpRequesterProfileMVP"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/montserrat_semibold"
                                                android:text="@string/txtVwTeamMateProfileMVP"
                                                android:textAlignment="textStart"
                                                android:textColor="@color/black"
                                                android:textSize="25sp" />

                                            <TextView
                                                android:id="@+id/txtVwPopUpRequesterProfileMVPNumber"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="10dp"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/montserrat_semibold"
                                                android:text="@string/number"
                                                android:textAlignment="center"
                                                android:textColor="@color/black"
                                                android:textSize="25sp" />
                                        </TableRow>

                                        <TableRow
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:id="@+id/txtVwPopUpRequesterProfilePlayer"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/montserrat_semibold"
                                                android:text="@string/txtVwTeamMateProfileFutPlayPlayer"
                                                android:textAlignment="textStart"
                                                android:textColor="@color/black"
                                                android:textSize="25sp" />

                                            <TextView
                                                android:id="@+id/txtVwPopUpRequesterProfileFutPlayPlayerNumber"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="10dp"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/montserrat_semibold"
                                                android:text="@string/number"
                                                android:textAlignment="center"
                                                android:textColor="@color/black"
                                                android:textSize="25sp" />
                                        </TableRow>
                                    </TableLayout>
                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txtVwPopUpRequesterProfileAcceptRequest"
                                    android:layout_width="184dp"
                                    android:layout_height="66dp"
                                    android:background="@drawable/join_request_club_button_round_style"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="center"
                                    android:text="@string/btnAcceptRequest"
                                    android:textSize="16sp" />
                            </TableRow>

                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>