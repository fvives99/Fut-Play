<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tblLytMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Controllers.Activities.MenuActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_purple"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <FrameLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgVwMenuBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:src="@drawable/arrow_back_icon"
                android:contentDescription="@string/contDesc" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imgVwMenuFutPlayHeader"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.75"
            android:background="@drawable/futplay_header"
            android:contentDescription="@string/contDesc" />


        <FrameLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgVwMenuSignOut"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:src="@drawable/sign_out_icon"
                android:contentDescription="@string/contDesc" />
        </FrameLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/fragContainerMenu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </FrameLayout>
    </TableRow>

    <TableRow
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            tools:ignore="UselessLeaf" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgVwMenuProfile"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/profile_icon"
            android:contentDescription="@string/contDesc" />

        <ImageView
            android:id="@+id/imgVwMenuTeams"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/teams_icon"
            android:contentDescription="@string/contDesc" />

        <ImageView
            android:id="@+id/imgVwMenuFields"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/fields_icon"
            android:contentDescription="@string/contDesc" />

        <ImageView
            android:id="@+id/imgVwMenuMatches"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/matches_icon"
            android:contentDescription="@string/contDesc" />
    </TableRow>
</TableLayout>