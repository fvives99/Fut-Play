<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Controllers.Fragments.LoginFragment">

    <ImageView
        android:id="@+id/imgVwCheckBckgnd"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/check_bckgnd"
        android:contentDescription="@string/contDesc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.295" />

    <ImageView
        android:id="@+id/imgVwDoneCheck"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:contentDescription="@string/contDesc"
        android:src="@drawable/check_avd"
        app:layout_constraintBottom_toBottomOf="@+id/imgVwCheckBckgnd"
        app:layout_constraintEnd_toEndOf="@+id/imgVwCheckBckgnd"
        app:layout_constraintStart_toStartOf="@+id/imgVwCheckBckgnd"
        app:layout_constraintTop_toTopOf="@+id/imgVwCheckBckgnd" />

    <TextView
        android:id="@+id/txtVwDoneMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/txtVwDoneMessage"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVwCheckBckgnd"
        app:layout_constraintVertical_bias="0.126" />

    <TextView
        android:id="@+id/txtVwDoneOk"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:background="@drawable/ok_btn_bckgnd"
        android:fontFamily="@font/montserrat_bold"
        android:paddingTop="3dp"
        android:text="@string/txtVwDoneOk"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVwDoneMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>