<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="489dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txtVwCreateClub"
                android:layout_width="309dp"
                android:layout_height="300dp"
                android:background="@drawable/create_club_button_round_style"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/btnCreateClub"
                android:textAlignment="center"
                android:textColor="@color/gray"
                tools:textSize="32sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:gravity="center">

            <TextView
                android:id="@+id/txtVwRequestJoinClub"
                android:layout_width="wrap_content"
                android:layout_height="286dp"
                android:background="@drawable/join_request_club_button_round_style"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/btnVwJoinClub"
                android:textAlignment="center"
                android:textColor="@color/gray"
                tools:textSize="32sp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>